<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
                                                   android:layout_height="match_parent">

    <TextView
            android:layout_width="371dp" android:layout_height="129dp"
            android:text="Please enter you FarmBOX's connection ID" android:textSize="35sp"
            app:layout_constraintTop_toBottomOf="@+id/textView2" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintVertical_bias="0.209"
            android:id="@+id/textView6" android:textAlignment="center"
            android:layout_marginBottom="372dp">
    </TextView>
    <TextView android:layout_width="375dp" android:layout_height="89dp" android:text="Let's get set up!"
              android:textSize="52sp" app:layout_constraintTop_toTopOf="parent"
              app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintStart_toStartOf="parent"
              app:layout_constraintEnd_toEndOf="parent" app:layout_constraintVertical_bias="0.056"
              android:id="@+id/textView2" app:layout_constraintHorizontal_bias="0.542" android:textAlignment="center">

    </TextView>
    <Button
            android:text="Next"
            android:layout_width="117dp"
            android:layout_height="59dp" android:id="@+id/button3"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintHorizontal_bias="0.498"
            app:layout_constraintVertical_bias="0.884" android:textSize="20sp"/>

    <EditText
            android:layout_width="225dp"
            android:layout_height="71dp"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/conid"
            android:layout_marginTop="52dp"
            app:layout_constraintTop_toBottomOf="@+id/textView6"
            app:layout_constraintBottom_toTopOf="@+id/button3"
            app:layout_constraintVertical_bias="0.01"
            app:layout_constraintStart_toStartOf="@+id/textView6"
            app:layout_constraintEnd_toEndOf="@+id/textView6"
            android:hint="Connection ID"/>
</androidx.constraintlayout.widget.ConstraintLayout>